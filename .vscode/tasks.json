{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/env wolframscript -f build.wls",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "/usr/bin/env wolframscript -f install.wls",
            "group": "build"
        }
    ]
}